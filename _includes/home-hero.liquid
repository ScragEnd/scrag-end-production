<section class="home-hero">
  <div class="article-content-panel ">
    <div class="article-container animation-set">
      <ul class="article-title-container animation-set">

        {% for story in site.data.contentful.spaces.stories.postContainer limit:4 %}
          {% if story.homepage_feature == true %}
            <li><a href="{{ story.title | datapage_url: 'stories' }}" class="article-title animated animated--no-slide-up" data-delay="100" data-title="{{ story.title | slugify }}"><h2>{{ story.title }}</h2></a></li>
          {% endif %}
        {% endfor %}

      </ul>
      <a data-scroll href="#recent-stories" class="view-more text-link animated animated--no-slide-up" data-delay="200">View more stories</a>
    </div>
  </div>
  <div class="article-image-panel">
    <div class="article-images-container">

      {% for story in site.data.contentful.spaces.stories.postContainer limit:4 %}
        {% if story.homepage_feature == true %}
          <div class="single-article-image {{ story.title | slugify }}" style="background-image: url('https:{{ story.feature_image.url }}')"></div>
        {% endif %}
      {% endfor %}

    </div>
    <div class="article-container mobile animation-set">
      <ul class="article-title-container mobile animated animated--no-slide-up" data-delay="100">
        {% for story in site.data.contentful.spaces.stories.postContainer limit:4 %}
          {% if story.homepage_feature == true %}
            <li><a href="{{ story.title | datapage_url: 'stories' }}" class="article-title animated animated--no-slide-up" data-delay="100" data-title="{{ story.title | slugify }}"><h2>{{ story.title }}</h2></a></li>
          {% endif %}
        {% endfor %}
      </ul>
      <a data-scroll href="#recent-stories" class="view-more text-link animated animated--no-slide-up" data-delay="150">View more stories</a>
    </div>
  </div>
</section>
